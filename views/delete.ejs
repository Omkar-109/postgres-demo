<%- include("partials/header.ejs") %>
    <main class="detele-section">
        <h1>Remove a Student</h1>
        <form class="form mb-2" action="/remove" method="post">
            <fieldset>
            <legend>Search student by:</legend>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="searchPara" id="rollnoSearch" value="rollno" checked>
                <label class="form-check-label" for="rollnoSearch">
                  Roll Number
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="searchPara" id="nameSearch" value="name">
                <label class="form-check-label mb-3" for="nameSearch">
                  Name
                </label>
            </div>
        </fieldset>
            <label>Only enter the field chosen in above radio button</label>
            <input class="mb-1 form-control" type="text" name="name" placeholder="Enter Student name">
            <input class="mb-2 form-control" type="text" name="rollno" placeholder="Enter roll no">
            <input class="mb-1 btn btn-primary" type="submit">
        </form>
    </main>
<%- include("partials/footer.ejs") %>