<%- include("partials/header.ejs") %>

    <main class="enter-form">
        <h1>Enter Student Details</h1>

        <% if (error) { %>
            <p style="color: red;"><%= error %></p>
        <% } %>

        <form class="form " action="/students/addstudent" method="post">
            <input class="mb-1 form-control" type="text" name="name" placeholder="Enter Student name" required>
            <input class="mb-2 form-control" type="number" name="rollno" placeholder="Enter roll no" required>
            <input class="mb-3 form-control" type="number" name="graduation_percentage" placeholder="Enter graduation percentage" required>
            <input class="mb-1 btn btn-primary" type="submit">
        </form>
    </main>

<%- include("partials/footer.ejs") %>